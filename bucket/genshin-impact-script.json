    "uninstaller": {
        "script": [
            "ensure \"$persist_dir\" | Out-Null",
            "Copy-Item \"$dir\\config.ini\" \"$persist_dir\" -ErrorAction SilentlyContinue -Force",
            "Copy-Item \"$dir\\character.ini\" \"$persist_dir\" -ErrorAction SilentlyContinue -Force"
        ]
