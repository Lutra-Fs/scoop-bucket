    "post_install": [
        "if (Test-Path \"$persist_dir\\config.ini\") {",
        "    Remove-Item \"$dir\\config.ini\"",
        "    Copy-Item \"$persist_dir\\config.ini\" \"$dir\"",
        "}",
        "if (Test-Path \"$persist_dir\\character.ini\") {",
        "    Remove-Item \"$dir\\character.ini\"",
