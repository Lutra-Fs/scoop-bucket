{
    "version": "0.8.1",
    "description": "Game Launcher for miHoYo",
    "notes": "the newest version should always been used, the internal update check cannot been disabled.",
    "homepage": "https://github.com/Scighost/Starward",
    "license": "MIT license",
    "architecture": {
        "64bit": {
            "url": "https://github.com/Scighost/Starward/releases/download/0.8.1/Starward_Portable_0.8.1_x64.7z",
            "hash": "d3881acdd1ad3a508fe68014dfe529da2e07cf00e79be5bd4251660c25e33a12"
        },
        "arm64": {
            "url": "https://github.com/Scighost/Starward/releases/download/0.8.1/Starward_Portable_0.8.1_arm64.7z",
            "hash": "de1f9932de094073c9dae4830ec3131e28b4bbf0187f5b0459482354854d9fe7"
        }
    },
    "extract_dir": "Starward",
    "bin": "Starward.exe",
    "persist": "data",
    "shortcuts": [
        [
            "Starward.exe",
            "Starward"
        ]
    ],
    "post_install": [
        "if (Test-Path \"$persist_dir\\config.ini\") {",
        "    Copy-Item \"$persist_dir\\config.ini\" \"$dir\"",
        "}",
        "else {",
        "    New-Item \"$persist_dir\\config.ini\" -ItemType File | Out-Null",
        "    Set-Content -Path \"$persist_dir\\config.ini\" -Value \"EnableConsole = false
UserDataFolder=./data\"",
        "    Copy-Item \"$persist_dir\\config.ini\" \"$dir\"",
        "}"
    ],
    "pre_uninstall": [
        "if (Test-Path \"$dir\\config.ini\") {",
        "    Copy-Item \"$dir\\config.ini\" \"$persist_dir\"",
        "}"
    ],
    "checkver": {
        "github": "https://github.com/Scighost/Starward"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Scighost/Starward/releases/download/$version/Starward_Portable_$version_x64.7z"
            },
            "arm64": {
                "url": "https://github.com/Scighost/Starward/releases/download/$version/Starward_Portable_$version_arm64.7z"
            }
        }
    }
}
